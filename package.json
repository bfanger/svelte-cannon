{
  "name": "svelte-cannon",
  "description": "Declarative Svelte components for the cannon-es physics engine",
  "version": "0.8.0",
  "license": "MIT",
  "homepage": "https://svelte-cannon.bfanger.nl/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bfanger/svelte-cannon.git"
  },
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-package",
    "lint": "svelte-kit sync && concurrently -c \"#c596c7\",\"#676778\",\"#4b32c3\",\"#fafafa\" --kill-others-on-fail \"npm:lint:*\"",
    "lint:prettier": "prettier --check .",
    "lint:svelte-check": "svelte-check --fail-on-warnings",
    "lint:eslint": "eslint --max-warnings=0",
    "lint:stylelint": "stylelint --max-warnings=0 \"src/**/*.{css,svelte}\"",
    "format": "eslint --fix && stylelint --fix \"src/**/*.{css,svelte}\" && prettier --write .",
    "prepare": "husky install",
    "test": "vitest run",
    "test:watch": "npm run test -- --watch"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings 0 --no-ignore",
      "sh -c 'tsc -p tsconfig.json --noEmit'"
    ],
    "*.(c)?js": [
      "eslint --max-warnings 0 --no-ignore"
    ],
    "*.svelte": [
      "eslint --max-warnings 0 --no-ignore",
      "svelte-check --fail-on-warnings",
      "prettier --check"
    ]
  },
  "peerDependencies": {
    "cannon-es": "*"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.50.2",
    "@sveltejs/package": "^2.5.7",
    "@testing-library/svelte": "^5.3.1",
    "@types/three": "0.135.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "cannon-es": "^0.20.0",
    "cannon-es-debugger": "^1.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss-html": "^1.8.1",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "stylelint": "^17.0.0",
    "stylelint-config-clean-order": "^8.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-prettier": "^5.0.3",
    "svelte": "^5.50.1",
    "svelte-check": "^4.3.6",
    "svelte-cubed": "^0.2.1",
    "three": "0.135.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^4.0.18"
  }
}
